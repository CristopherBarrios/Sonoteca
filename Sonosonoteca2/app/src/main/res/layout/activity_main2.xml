<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:text="Bienvenido a Fonoteca, esta aplicacion es una libreria de audios, si deseas buscar un audio elige siguiente, si necesitas ayuda elige el boton de ayuda"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/background_dark" android:textSize="20sp"
            android:background="?attr/colorButtonNormal" android:layout_marginTop="98dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"/>
    <Button
            android:text="Ayuda"
            android:layout_width="161dp"
            android:layout_height="43dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="242dp" app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginEnd="7dp" android:onClick="boton2"/>
    <Button
            android:text="Siguiente"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="242dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="boton1"/>
</android.support.constraint.ConstraintLayout>