<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Advertencia"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="424dp" android:textSize="25sp"
            android:textColor="@android:color/background_dark" android:layout_marginTop="42dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView2"/>
    <TextView
            android:text="Esta aplicacion necesita el uso de datos o wifi para continuar"
            android:layout_width="302dp"
            android:layout_height="46dp"
            android:id="@+id/textView"
            android:textColor="@android:color/background_dark" android:background="?attr/colorButtonNormal"
            android:textSize="15sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="62dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="58dp" android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Cancelar"
            android:layout_width="152dp"
            android:layout_height="52dp"
            android:id="@+id/button"
            android:onClick="boton2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginBottom="256dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="3dp"/>
    <Button
            android:text="aceptar"
            android:layout_width="151dp"
            android:layout_height="52dp"
            android:id="@+id/button2"
            android:onClick="boton1"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="41dp"
            android:layout_marginBottom="257dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp"/>

</android.support.constraint.ConstraintLayout>