<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main5Activity">

    <Button
            android:text="Online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginBottom="125dp"
            app:layout_constraintBottom_toTopOf="@+id/button7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" android:contentDescription="@string/app_name" android:onClick="boton1"/>
    <Button
            android:text="Local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="179dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" android:contentDescription="@string/app_name" android:onClick="boton2"/>
    <TextView
            android:text="En el caso que haya algun error en la conexion puede utilizarlo local"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="15sp"
            android:textColor="@android:color/background_dark" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/button6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp" android:contentDescription="@string/app_name"
            app:layout_constraintVertical_chainStyle="packed"/>
</android.support.constraint.ConstraintLayout>