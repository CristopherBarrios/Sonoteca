<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main6Activity" android:background="@android:color/background_light">

    <Button
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:id="@+id/btn_play"
            android:onClick="PlayPause" android:background="@drawable/reproducir"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@+id/button10"/>
    <Button
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:id="@+id/btn_stop"
            android:onClick="Stop" android:background="@drawable/detener"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@+id/button11" android:layout_marginStart="3dp"/>
    <Button
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:id="@+id/btn_repetir"
            android:onClick="Repetir" android:background="@drawable/no_repetir"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp"
            app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toStartOf="@+id/button11"
            android:layout_marginEnd="2dp"/>
    <Button
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:id="@+id/button10" android:onClick="Anterior"
            android:background="@drawable/anterior"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/btn_play"
            app:layout_constraintEnd_toStartOf="@+id/btn_repetir" android:layout_marginEnd="5dp"/>
    <Button
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:id="@+id/button11" android:onClick="Siguiente"
            android:background="@drawable/siguiente"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp"
            app:layout_constraintStart_toEndOf="@+id/btn_repetir" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_stop" android:layout_marginEnd="3dp"/>
    <ImageView
            android:layout_width="309dp"
            android:layout_height="316dp" app:srcCompat="@drawable/portada1"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name"/>
</android.support.constraint.ConstraintLayout>